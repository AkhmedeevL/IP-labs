@model IEnumerable<WeBookShop.Models.Book>
@{
    Layout = null;
}
<div id="searchresults">
    <table>
            <h3>Все книги автора </h3>
        <thead>
            <tr>
                <th>Автор</th>
                <th>Название</th>
                <th>Аннотация</th>
                <th>Цена</th>

            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="3" style="color:red">
                        No Match Any Document
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Author</td>
                        <td>@item.Name</td>
                        <td>@item.Annotation</td>
                        <td>@item.Price</td>

                    </tr>
                }
            }
        </tbody>
    </table>
</div>
