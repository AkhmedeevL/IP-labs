
@{
    ViewBag.Title = "EditBook";
}

<h2>Редактирование книги</h2>

@{
    ViewBag.Title = "Редактировать книгу";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model WeBookShop.Models.Book
<h2>Книга № @Model.Id</h2>
@using (Html.BeginForm("EditBook", "Book", FormMethod.Post))
{
<fieldset>
    @Html.HiddenFor(m => m.Id)
    <p>
        @Html.LabelFor(m => m.Author, "Автор")
        <br />
        @Html.EditorFor(m => m.Author)
    </p>
    <p>
        @Html.LabelFor(m => m.Name, "Название")
        <br />
        @Html.EditorFor(m => m.Name)
    </p>
    <p>
        @Html.LabelFor(m => m.Annotation, "Аннотация")
        <br />
   
        @Html.TextBoxFor(m => m.Annotation)
    </p>

    <p>
        @Html.LabelFor(m => m.Price, "Цена")
        <br />
        @Html.EditorFor(m => m.Price)
    </p>



 
    <p><input type="submit" value="Отправить" /></p>
</fieldset>
}